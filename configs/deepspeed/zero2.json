{
  "bf16": { "enabled": true },

  "optimizer": {
    "type": "AdamW",
    "params": {
      "lr": 1e-4,
      "betas": [0.9, 0.95],
      "eps": 1e-8,
      "weight_decay": 0.1
    }
  },

  "scheduler": {
    "type": "WarmupLR",
    "params": {
      "warmup_min_lr": 0.0,
      "warmup_max_lr": 1e-4,
      "warmup_num_steps": 200
    }
  },

  "zero_optimization": {
    "stage": 2,
    "offload_optimizer": {
      "device": "cpu",
      "pin_memory": true
    },
    "overlap_comm": true,
    "contiguous_gradients": true,
    "reduce_bucket_size": 67108864,
    "allgather_bucket_size": 67108864
  },

  "train_micro_batch_size_per_gpu": 1,
  "gradient_accumulation_steps": 8,

  "aio": {
    "block_size": 1048576,
    "queue_depth": 16,
    "single_submit": false,
    "overlap_events": true,
    "thread_count": 1
  },

  "wall_clock_breakdown": false
}
